<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TopRoundedCard" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <!-- res/values/styles.xml -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/signal_blue</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Add these to your res/values/styles.xml -->
    <style name="ShapeAppearance.MyApp.Dialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyApp.DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.Dialog</item>
        <item name="textInputStyle">@style/MyApp.TextInputLayout.OutlinedBox</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyApp.DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyApp.DialogButton.Negative</item>

    </style>

    <style name="MyApp.selectusersTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.Dialog</item>
        <item name="textInputStyle">@style/MyApp.TextInputLayout.OutlinedBox</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyApp.DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyApp.DialogButton.Negative</item>

    </style>
    <!-- TextInputLayout Style -->
    <style name="MyApp.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Keep existing attributes -->
        <item name="boxBackgroundMode">outline</item>
        <!-- Add underline settings -->
        <item name="boxStrokeColor">@color/light_grey</item> <!-- Color of the underline -->
        <item name="boxStrokeWidth">1dp</item> <!-- Thickness of the underline -->
        <item name="boxStrokeWidthFocused">2dp</item> <!-- Thickness when focused -->

        <!-- Other existing attributes -->
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintTextColor">@color/light_grey</item>
    </style>

    <!-- Button Styles -->
    <style name="MyApp.DialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_marginEnd">10dp</item>

    </style>

    <style name="MyApp.DialogButton.Positive" parent="MyApp.DialogButton">
        <item name="android:textColor">@color/signal_blue</item>
    </style>

    <style name="MyApp.DialogButton.Negative" parent="MyApp.DialogButton">
        <item name="android:textColor">@color/red</item>
    </style>

</resources>
