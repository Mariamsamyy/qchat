<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Header -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="12dp"
            app:shapeAppearanceOverlay="@style/round"
            android:contentDescription="Profile Picture"
            android:scaleType="centerCrop"

            android:src="@drawable/portrait"
            />

        <TextView
            android:fontFamily="@font/MontserratB"
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:text="Jhon Abraham"
            android:textColor="#FFFFFF"

            android:textSize="18sp" />

        <TextView
            android:fontFamily="@font/MontserratB"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="JhonAbraham"
            android:textColor="#A0A0A0"

            android:textSize="11sp" />

        <!-- Buttons -->

        <!-- Divider -->
        <LinearLayout

            android:layout_width="345dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/chat_button"
                android:layout_width="42dp"
                android:layout_height="35dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Chat"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chat50" />


            <ImageButton
                android:id="@+id/call_button1"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Call"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/video50" />

            <ImageButton
                android:id="@+id/call_button2"
                android:layout_width="39dp"
                android:layout_height="35dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/circle_background"
                android:contentDescription="Call"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phone50" />

            <ImageButton
                android:id="@+id/more_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_background"
                android:contentDescription="More"
                android:padding="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/more30" />

        </LinearLayout>



        <!-- Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/detail"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp">

            <View
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginVertical="16dp"
                android:background="#A0A0A0" />


            <!-- Display Name -->
            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Display Name"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Jhon Abraham"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Email Address -->
            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Email Address"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="jhonabraham20@gmail.com"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Address -->
            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Address"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="33 street west subidbazar, Sylhet"
                android:textColor="#000000"
                android:textSize="16sp" />

            <!-- Phone Number -->
            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Phone Number"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="(320) 555-0104"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:fontFamily="@font/MontserratB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Media Shared"
                android:textColor="#A0A0A0"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="16dp"
                        app:shapeAppearanceOverlay="@style/rounded"
                        android:contentDescription="Media Image"
                        android:src="@drawable/download" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="16dp"
                        app:shapeAppearanceOverlay="@style/rounded"
                        android:contentDescription="Media Image"
                        android:src="@drawable/allianz" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:shapeAppearanceOverlay="@style/rounded"
                        android:contentDescription="Media Image"
                        android:src="@drawable/landscape" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <!-- Media Shared Section -->

    </LinearLayout>
</ScrollView>
