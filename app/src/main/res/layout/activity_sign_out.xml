<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- Progress indicator to show that the sign-out process is happening -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"/>

    <!-- A message showing that the user has been signed out -->
    <TextView
        android:id="@+id/signOutMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing you out..."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp" />  <!-- Margin between ProgressBar and TextView -->

</LinearLayout>
